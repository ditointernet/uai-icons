{
  "include": ["src/*.ts", "src/*.tsx"],
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "lib": ["DOM", "esnext"],
    "target": "esnext",
    "allowJs": true
  },
}